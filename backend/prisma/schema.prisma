// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String?
  name             String?
  image            String?
  role             UserRole  @default(USER)
  emailVerified    DateTime?
  stripeCustomerId String?
  lastLoginAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  profile        Profile?
  credits        UserCredits?
  documents      Document[]
  payments       Payment[]
  creditUsage    CreditUsage[]
  accounts       Account[]
  sessions       Session[]
  passwordResets PasswordReset[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_resets")
}

enum UserRole {
  USER
  ADMIN
}

// ==================== PROFILE ====================

model Profile {
  id          String  @id @default(uuid())
  userId      String  @unique
  headline    String?
  summary     String? @db.Text
  phone       String?
  location    String?
  website     String?
  linkedinUrl String?
  githubUrl   String?

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  experiences    Experience[]
  education      Education[]
  skills         Skill[]
  projects       Project[]
  certifications Certification[]
  languages      Language[]

  @@map("profiles")
}

model Experience {
  id           String    @id @default(uuid())
  profileId    String
  company      String
  title        String
  location     String?
  startDate    DateTime
  endDate      DateTime?
  current      Boolean   @default(false)
  description  String?   @db.Text
  achievements String[]

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

model Education {
  id          String    @id @default(uuid())
  profileId   String
  institution String
  degree      String
  field       String
  startDate   DateTime
  endDate     DateTime?
  gpa         String?
  description String?   @db.Text

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("education")
}

model Skill {
  id        String     @id @default(uuid())
  profileId String
  name      String
  level     SkillLevel
  category  String?

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("skills")
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model Project {
  id           String    @id @default(uuid())
  profileId    String
  name         String
  description  String?   @db.Text
  technologies String[]
  url          String?
  startDate    DateTime?
  endDate      DateTime?

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model Certification {
  id           String    @id @default(uuid())
  profileId    String
  name         String
  issuer       String
  issueDate    DateTime
  expiryDate   DateTime?
  credentialId String?
  url          String?

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model Language {
  id          String              @id @default(uuid())
  profileId   String
  name        String
  proficiency LanguageProficiency

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("languages")
}

enum LanguageProficiency {
  BASIC
  CONVERSATIONAL
  PROFESSIONAL
  NATIVE
}

// ==================== DOCUMENTS ====================

model Document {
  id             String       @id @default(uuid())
  userId         String
  type           DocumentType
  name           String
  templateId     String
  content        Json
  jobDescription String?      @db.Text
  jobUrl         String?
  jobTitle       String?
  companyName    String?
  atsScore       Float?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template          @relation(fields: [templateId], references: [id])
  versions DocumentVersion[]

  @@map("documents")
}

model DocumentVersion {
  id         String   @id @default(uuid())
  documentId String
  version    Int
  content    Json
  pdfUrl     String?
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, version])
  @@map("document_versions")
}

enum DocumentType {
  CV
  COVER_LETTER
}

// ==================== TEMPLATES ====================

model Template {
  id              String       @id @default(uuid())
  name            String
  type            DocumentType
  description     String?
  thumbnail       String?
  isPremium       Boolean      @default(false)
  active          Boolean      @default(true)
  defaultSections Json
  styles          Json
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  documents Document[]

  @@map("templates")
}

// ==================== CREDITS & PAYMENTS ====================

model UserCredits {
  id             String   @id @default(uuid())
  userId         String   @unique
  balance        Float    @default(0)
  totalPurchased Float    @default(0)
  totalUsed      Float    @default(0)
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_credits")
}

model CreditPack {
  id       String   @id @default(uuid())
  name     String
  credits  Int
  price    Float
  currency String   @default("USD")
  active   Boolean  @default(true)
  popular  Boolean  @default(false)
  features String[]

  payments Payment[]

  @@map("credit_packs")
}

model CreditUsage {
  id        String   @id @default(uuid())
  userId    String
  credits   Float
  action    String
  documentId String?
  description String?
  metadata   Json?
  createdAt  DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("credit_usages")
}

model CreditPack {
  id            String   @id @default(uuid())
  name          String
  credits       Int
  price         Float
  currency      String   @default("USD")
  stripePriceId String?
  active        Boolean  @default(true)
  popular       Boolean  @default(false)
  features      String[]

  payments Payment[]

  @@map("credit_packs")
}

model PromoCode {
  id              String    @id @default(uuid())
  code            String    @unique
  credits         Int       @default(0)
  discountPercent Float?
  maxUses         Int?
  usedCount       Int       @default(0)
  expiresAt       DateTime?
  active          Boolean   @default(true)
  createdAt       DateTime  @default(now())

  redemptions PromoCodeUsage[]

  @@map("promo_codes")
}

model PromoCodeUsage {
  id          String   @id @default(uuid())
  promoCodeId String
  userId      String
  createdAt   DateTime @default(now())

  promoCode PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)

  @@unique([promoCodeId, userId])
  @@map("promo_code_usages")
}

model SystemSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  metadata  Json?
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

model EmailLog {
  id        String   @id @default(uuid())
  to        String
  subject   String
  status    String
  messageId String?
  error     String?
  createdAt DateTime @default(now())

  @@map("email_logs")
}

model Payment {
  id             String    @id @default(uuid())
  userId         String
  amount         Float
  currency       String        @default("USD")
  status         PaymentStatus @default(PENDING)
  stripePaymentId String?       @unique
  stripeSessionId String?       @unique
  creditPackId    String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  creditPack CreditPack? @relation(fields: [creditPackId], references: [id])

  @@map("payments")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ==================== AI PROVIDERS ====================

model AIProvider {
  id           String         @id @default(uuid())
  name         String
  type         AIProviderType
  apiKey       String
  model        String
  isActive     Boolean        @default(true)
  isPrimary    Boolean        @default(false)
  costPerToken Float          @default(0)
  maxTokens    Int            @default(4096)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("ai_providers")
}

enum AIProviderType {
  OPENAI
  ANTHROPIC
  GOOGLE
  CUSTOM
}

// ==================== SYSTEM CONFIG ====================

model SystemConfig {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt

  @@map("system_configs")
}

// ==================== ANALYTICS ====================

model AnalyticsEvent {
  id        String   @id @default(uuid())
  userId    String?
  event     String
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([event, createdAt])
  @@map("analytics_events")
}
